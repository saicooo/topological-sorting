<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="800.0" prefWidth="1200.0" 
            xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="Controller">
   
   <children>
      <!-- ScrollPane для графа -->
      <ScrollPane fx:id="scrollPane" layoutY="10.0" prefHeight="650.0" prefWidth="1180.0" 
                  AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <content>
            <Pane fx:id="graphCanvas" />
         </content>
      </ScrollPane>
      
      <!-- Кнопки -->
      <Button fx:id="OnLoadFromFile" layoutX="14.0" layoutY="680.0" mnemonicParsing="false" 
              onAction="#onLoadFromFileClick" prefHeight="50.0" prefWidth="150.0" text="Загрузить из файла">
         <font>
            <Font name="Calibri Bold" size="14.0" />
         </font>
      </Button>
      
      <Button fx:id="BackButton" layoutX="200.0" layoutY="680.0" mnemonicParsing="false" 
              onAction="#onBackButtonClick" prefHeight="50.0" prefWidth="100.0" text="Назад">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      
      <Button fx:id="ForwardButton" layoutX="320.0" layoutY="680.0" mnemonicParsing="false" 
              onAction="#onForwardButtonClick" prefHeight="50.0" prefWidth="100.0" text="Вперед">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      
      <Button fx:id="RunImmediately" layoutX="950.0" layoutY="680.0" mnemonicParsing="false" 
              onAction="#onRunImmediatelyClick" prefHeight="50.0" prefWidth="150.0" text="Выполнить сразу">
         <font>
            <Font name="Calibri Bold" size="14.0" />
         </font>
      </Button>
      
      <Button fx:id="EnterManually" layoutX="14.0" layoutY="740.0" mnemonicParsing="false" 
              onAction="#onInputManualClick" prefHeight="50.0" prefWidth="150.0" text="Ввести вручную">
         <font>
            <Font name="Calibri Bold" size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>